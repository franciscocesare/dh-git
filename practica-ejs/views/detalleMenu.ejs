<!DOCTYPE html>
<html>
  <%- include('./partials/head') %>

    <body>
        <!-- Page content -->
        <div class="ps-content">

          <!-- Menu Section -->
          <div class="ps-row ps-padding-64" id="menu">
            <div class="ps-col l6 ps-padding-large">
              <h1 class="ps-center">
                <%= plato.title %>
              </h1>
              <br />
              <h4>
                <%= plato.description %>
              </h4>
              <p class="ps-text-grey">
                <%= plato.currency %>
                  <%= plato.price %>
              </p>
            </div>

            <div class="ps-col l6 ps-padding-large ps-img-menu">
              <img src="/images/products/<%= plato.imageProduct %>" class="ps-round ps-image ps-opacity-min" alt="Menu" />
            </div>
            <a href="/products/edit/<%= plato.id %>">
              <input type="button" rel="stylesheet" value="Modificar plato"></input>
            </a>
            <a href="/products">
              <input type="button" rel="stylesheet" value="Volver"></input>
            </a>
          </div>

          <!-- Footer -->
          <%- include("./partials/footer") %>
        </div>
    </body>

</html>